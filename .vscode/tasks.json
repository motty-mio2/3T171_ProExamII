{
    "tasks": [
        {
            "type": "shell",
            "label": "gcc-7 build active file",
            "command": "/usr/bin/gcc-7",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                //"cwd": "/usr/bin"
                "cwd": "${fileDirname}",
            }
        }
    ],
    "version": "2.0.0"
}